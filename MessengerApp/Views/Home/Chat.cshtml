
@{
    ViewData["Title"] = "Chat";
}



<script src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>

<style>
  body {
    background-color: #f9f9f9;
    color: #333;
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 20px auto;
  }

  .card-header {
    background-color: #007bff;
    color: #fff;
    padding: 15px;
    text-align: center;
    border-radius: 10px 10px 0 0;
  }

  .row {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    margin-bottom: 15px;
  }

  .col-md-8 {
    flex: 1;
  }

  #chatLog {
    list-style-type: none;
    padding: 0;
    margin: 0;
    overflow-y: auto;
    max-height: 300px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background-color: #fff;
    padding: 10px;
  }

  .col-md-4 {
    flex-basis: 30%;
    background-color: #f0f0f0;
    border-radius: 0 0 10px 10px;
    padding: 15px;
  }

  .input-group {
    display: flex;
  }

  #txtInput {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px 0 0 5px;
  }

  #btnSend {
    padding: 10px;
    border: 1px solid #007bff;
    border-radius: 0 5px 5px 0;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
  }

  #btnSend:hover {
    background-color: #0056b3;
  }

  keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .chat-bubble {
    animation: fadeIn 0.5s ease-in-out;
    border-radius: 10px;
    padding: 10px;
    margin-bottom: 10px;
    background-color: #e6e6e6;
  }

  .chat-bubble.self {
    background-color: #d1e7dd;
  }

  .chat-bubble .username {
    font-weight: bold;
    color: #333;
  }

</style>

<div class="container">
  <div class="card-header">
    <h1>Chat</h1>
  </div>
  <div class="row">
    <div class="col-md-8">
      <ul id="chatLog"></ul>
    </div>
    <div class="col-md-4">
      <div id="onlineUsers"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="input-group">
        <input id="txtInput" class="form-control" required placeholder="Type your message..." />
        <button class="btn btn-outline-success" id="btnSend">Send</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/js/chat.js"></script>
  <script>
    // Example of adding a smooth scroll animation to chat log
    $('#chatLog').animate({
      scrollTop: $('#chatLog')[0].scrollHeight
    }, 500); // Scroll to bottom in 0.5 seconds
  </script>
}



